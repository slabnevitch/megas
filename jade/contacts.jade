extends _templates/main

block title
	| Контакты
	- var pageIndex = 6;
	
block content
	.contacts
		.contacts__wrapper
			.contacts__logo
				img(src="img/logo-long.svg" alt="alt")
			
			.contacts__values.value-contacts
				address.value-contacts__text
					p.value-contacts__row #[span ООО «Мегас»]
					p.value-contacts__row Санкт-Петербург, ул. Симонова 15, лит А, пом. 1
						br
						| #[a(href="tel:+78124673839") +7 (812) 467 38 39]
				
				ul.value-contacts__socs
					li.value-contacts__soc
						a(href="#").value-contacts__soc-link
							img(src="img/socs/vk.svg" alt="alt")

					li.value-contacts__soc
						a(href="#").value-contacts__soc-link
							img(src="img/socs/tgm.svg" alt="alt")

			.contacts__details
				- var dets = ['ИНН: 7814342327', 'КПП: 780201001' , 'ОГРН: 1069847102181'];
				each det in dets
					.contacts__detail= det
			
			.contacts__mails.mails-contacts
				- var mails = [{val: 'megasvending@yandex.ru', key: ' — общие вопросы'}, {val: 'zakupki@megasvending.ru', key: ' — по вопросам закупки продукции и ингредиентов'}, {val: 'razvitie@megasvending.ru', key: ' — установка автоматов'}];
				
				each mail in mails
					.mails-contact__row
						.mails-contact__val= mail.val
						.mails-contact__key= mail.key
			
			.contacts__specs
				h2 Обратитесь к нашим специалистам прямо сейчас
				p и получите профессиональную консультацию по вопросам установки и работы торговых
автоматов по телефону или по электронной почте. Будем рады помочь вам и ответить на все
ваши вопросы

