header(class=headerDark && headerFixed ? "header header--dark header--fixed" : headerDark ? "header header--dark" : headerFixed ? "header header--fixed" : "header")
	.header__wrapper
		.header__body
			a(href="index.html").header__logo
				img(src="img/header-logo.svg" alt="alt")

			.header__menu.menu-header
				button.toggle-mnu
					//- span
					svg.toggle-mnu__close(width='19', height='19', viewBox='0 0 19 19', fill='none', xmlns='http://www.w3.org/2000/svg')
						path(d='M1.24902 1.21875L17.6115 17.5812', stroke-width='1.6', stroke-miterlimit='10', stroke-linecap='round')
						path(d='M1.25 17.5811L17.6125 1.21859', stroke-width='1.6', stroke-miterlimit='10', stroke-linecap='round')

					svg.toggle-mnu__burger(width='25', height='17', viewBox='0 0 25 17', fill='none', xmlns='http://www.w3.org/2000/svg')
						path(d='M0.860352 1.3999H24.0004', stroke-width='1.6', stroke-miterlimit='10', stroke-linecap='round')
						path(d='M0.860352 8.3999H24.0004', stroke-width='1.6', stroke-miterlimit='10', stroke-linecap='round')
						path(d='M0.860352 15.3999H24.0004', stroke-width='1.6', stroke-miterlimit='10', stroke-linecap='round')
				nav.menu-header__body.menu.mulilevel-nav
					ul.menu__list
						- var menu =  [{title:'Школьный вендинг', link:'school'}, {title: 'Примеры установок', link:'examples'}, {title: 'Польза от вендинга', link:'benefit'}];
						
						//- li(data-single-dropdown='').menu__item
						//- 	a.menu__link(href='devices.html') Вендинговые Аппараты
						//- 	button.menu__arrow(type='button' data-dropdown-arrow)
						//- 	ul.single-dropdown
						//- 		li.single-dropdown__item
						//- 			a.single-dropdown__link(href="devices.html") Кофейные автоматы
						//- 		li.single-dropdown__item
						//- 			a.single-dropdown__link(href="devices.html#coffee-points") Кофе поинты
						//- 		li.single-dropdown__item
						//- 			a.single-dropdown__link(href="devices.html#snack-machines") Снековые автоматы
						//- 		li.single-dropdown__item
						//- 			a.single-dropdown__link(href="devices.html#smartmarkets") Смартмаркеты

						li.menu-list__item.menu__item(data-dropdowned data-dropdowned-parent)
							if pageIndex == 0
								a.menu__link(href='#') Вендинговые Аппараты
							else
								a.menu__link(href='devices.html') Вендинговые Аппараты
							button.menu-list__icon(data-dropdown-icon)
							ul.submenu-list
								li.submenu-list__item
									a.submenu-list__link(href="devices.html") Кофейные автоматы
								li.submenu-list__item
									a.submenu-list__link(href="devices.html#coffee-points") Кофе поинты
								li.submenu-list__item
									a.submenu-list__link(href="devices.html#snack-machines") Снековые автоматы
								li.submenu-list__item
									a.submenu-list__link(href="devices.html#smartmarkets") Смартмаркеты
						
						each item, i in menu
							li.menu__item
								if pageIndex == (i+1)
									a(href="#").menu__link= item.title
								else
									a(href=item.link+".html").menu__link= item.title
								
								//- a(href=item.link+".html").menu__link= item.title
